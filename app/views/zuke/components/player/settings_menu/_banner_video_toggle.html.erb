<button data-controller="music--banner-video"
        data-action="click->music--banner-video#toggle"
        data-music--banner-video-active-class="bg-green-500"
        data-music--banner-video-inactive-class="bg-gray-600"
        class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-gray-900"
        type="button"
        role="switch"
        aria-label="Toggle banner video">
  <!-- Toggle Switch Thumb -->
  <span class="toggle-thumb inline-block h-4 w-4 transform rounded-full bg-white transition-transform"
        data-music--banner-video-target="thumb"></span>
</button>

<style>
  [data-controller="music--banner-video"].bg-green-500 .toggle-thumb {
    transform: translateX(1.5rem);
  }
  [data-controller="music--banner-video"].bg-gray-600 .toggle-thumb {
    transform: translateX(0.25rem);
  }
</style>
