<button data-controller="music--mobile-eq"
        data-action="click->music--mobile-eq#toggle"
        data-music--mobile-eq-active-class="bg-amber-500"
        data-music--mobile-eq-inactive-class="bg-gray-600"
        class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 focus:ring-offset-gray-900"
        type="button"
        role="switch"
        aria-label="Toggle mobile EQ">
  <!-- Toggle Switch Thumb -->
  <span class="toggle-thumb inline-block h-4 w-4 transform rounded-full bg-white transition-transform"
        data-music--mobile-eq-target="thumb"></span>
</button>

<style>
  [data-controller="music--mobile-eq"].bg-amber-500 .toggle-thumb {
    transform: translateX(1.5rem);
  }
  [data-controller="music--mobile-eq"].bg-gray-600 .toggle-thumb {
    transform: translateX(0.25rem);
  }
</style>
