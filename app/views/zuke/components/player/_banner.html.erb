<div class="relative w-full overflow-hidden transition-all duration-500 ease-in-out"
     style="height: 250px;"
     data-controller="music--banner music--banner-height"
     data-music--banner-target="container"
     data-music--banner-height-target="banner">
    <!-- Dynamic Video (hidden by default, shown if video enabled and available) -->
    <video data-music--banner-target="video"
           class="hidden w-full h-full object-cover"
           autoplay
           loop
           muted
           playsinline
           preload="metadata">
    </video>

    <!-- Dynamic Image -->
    <%= image_tag(
      banner_image || "home-banner.jpg",
      class: "w-full h-full object-cover",
      alt: "Banner Image",
      data: { "music--banner-target": "image" }
    ) %>

    <!-- Overlay (positioned absolutely over image) -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(0,0,0,0.5),transparent)] flex items-center justify-start p-3 sm:p-4 md:p-6"
     data-music--banner-target="overlay">
      <div>
        <h2 class="text-[#FFC9A4] text-xl sm:text-2xl md:text-4xl font-bold"
            data-music--banner-target="title"><%= title || "Welcome back Dev3027" %></h2>
        <p class="text-[#FFC9A4] text-sm sm:text-base"
          data-music--banner-target="subtitle"><%= subtitle || "Please consider making me available to everyone." %></p>
      </div>
    </div>

    <!-- Arrow Toggle Button (Lower Right) -->
    <button data-action="click->music--banner-height#toggle"
            data-music--banner-height-target="arrow"
            class="absolute bottom-4 right-4 z-10 bg-black/50 hover:bg-black/70 p-2 rounded-full transition-all duration-300 ease-in-out backdrop-blur-sm"
            aria-label="Toggle banner height"
            type="button">
      <!-- Down Arrow Icon (Chevron) -->
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"/>
      </svg>
    </button>
  </div>
  