<div data-controller="music--search" class="w-full px-4 py-3 bg-gray-800/50">
  <div class="relative max-w-2xl mx-auto">
    <!-- Search Input -->
    <div class="relative">
      <!-- Search Icon -->
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

      <!-- Input Field -->
      <input type="text"
             data-music--search-target="input"
             data-action="input->music--search#performSearch keydown.esc->music--search#clearSearch"
             placeholder="Search songs, artists, albums..."
             value="<%= defined?(@query) ? @query : '' %>"
             class="w-full pl-10 pr-10 py-2.5 bg-gray-900 border border-gray-700 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent transition-all"
             autocomplete="off">

      <!-- Clear Button (hidden by default) -->
      <button type="button"
              data-music--search-target="clearButton"
              data-action="click->music--search#clearSearch"
              class="hidden absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-200 transition-colors"
              aria-label="Clear search">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Search Status/Hint -->
    <div data-music--search-target="hint" class="mt-2 text-sm text-gray-500 text-center hidden">
      Type at least 3 characters to search
    </div>
  </div>
</div>
