<section class="flex justify-center items-center bg-zinc-900 w-full min-h-screen">
  <div class="flex w-full max-w-5xl">
    <!-- Main Content Area (full width on mobile, flexible on desktop) -->
    <div class="bg-gray-700 relative flex flex-col h-screen w-full">
      <!-- Music Player (fixed height) -->
      <div class="sticky top-0 z-20 bg-[#856144]">
        <%= render partial: "zuke/components/music_player" %>
      </div>

      <!-- Scrollable Turbo Frame Content -->
      <div class="flex-1 overflow-y-auto">
        <%= turbo_frame_tag "music-frame" do %>
          <%= render partial: "zuke/turbo_frames/index", songs: @songs %>
        <% end %>
      </div>
    </div>
  </div>
</section>
