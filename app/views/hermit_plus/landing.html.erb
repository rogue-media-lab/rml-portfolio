<!-- Join the Waitlist Section -->
<section id="waitlist" class="w-full bg-white pt-20 pb-0 flex flex-col items-center relative scroll-mt-20">
  <div class="w-full max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">

      <!-- Left Column - Join the Waitlist Info -->
      <div class="bg-hermit-lt-blue/50 flex flex-col">
        <div class="p-8 lg:p-12 flex-grow">
          <h2 class="text-4xl lg:text-5xl font-bold text-hermit-burnt mb-8 font-teko tracking-wide">Join the Waitlist</h2>

          <div class="space-y-6 text-hermit-burnt font-mPlusCode">
            <p class="text-base lg:text-lg leading-relaxed">
              Here you will find Season 8, which is one of my favorites. In this season the hermits break into groups and the fun is non stop. The builds are amazing. How can you not love this season?! Bdubs builds a moon base and Mumbo gets a theme song.
            </p>

            <p class="text-base lg:text-lg leading-relaxed">
              The full version is in development! If you would like early access, join the waitlist!
            </p>

            <div class="pt-4">
              <p class="text-base lg:text-lg leading-relaxed">
                If you prefer, I can be reached at
              </p>
              <p class="text-base lg:text-lg font-semibold">
                rogue.media.lab@gmail.com
              </p>
              <p class="text-base lg:text-lg leading-relaxed mt-2">
                Typical reply within 24 hours.
              </p>
            </div>
          </div>
        </div>

        <!-- Minecraft Ground Pattern - Colorful -->
        <%= image_tag 'https://milk-blog.s3.us-east-2.amazonaws.com/hermits/ground_color.svg', class: "w-full h-auto block mt-auto" %>
      </div>

      <!-- Right Column - Contact Form -->
      <div class="bg-white border border-gray-300 flex flex-col">
        <div class="p-8 lg:p-12 flex-grow" id="hermit_contact_form">
          <%= form_with(model: Contact.new, url: contacts_path, class: "w-full space-y-6",
                        data: { controller: "hermit-contact", hermit_contact_target: "form", action: "submit->hermit-contact#submit" }) do |form| %>
            <div>
              <%= form.label :f_name, "Name", class: "block text-hermit-burnt font-mPlusCode mb-2 text-sm lg:text-base font-semibold" %>
              <%= form.text_field :f_name, required: true, class: "w-full p-3 border border-hermit-burnt rounded-md bg-white text-hermit-burnt placeholder-hermit-burnt/50 font-mPlusCode focus:outline-none focus:ring-2 focus:ring-hermit-teal" %>
            </div>

            <div>
              <%= form.label :email, "E Mail", class: "block text-hermit-burnt font-mPlusCode mb-2 text-sm lg:text-base font-semibold" %>
              <%= form.email_field :email, required: true, class: "w-full p-3 border border-hermit-burnt rounded-md bg-white text-hermit-burnt placeholder-hermit-burnt/50 font-mPlusCode focus:outline-none focus:ring-2 focus:ring-hermit-teal" %>
            </div>

            <div class="space-y-3">
              <div class="flex items-center">
                <%= check_box_tag 'subscribe_substack', 'yes', false, class: "w-4 h-4 text-hermit-teal focus:ring-hermit-teal border-hermit-burnt rounded mr-3" %>
                <%= label_tag 'subscribe_substack', "Subscribe to the Substack", class: "text-hermit-burnt font-mPlusCode text-sm lg:text-base" %>
              </div>

              <div class="flex items-center">
                <%= check_box_tag 'early_access', 'yes', false, class: "w-4 h-4 text-hermit-teal focus:ring-hermit-teal border-hermit-burnt rounded mr-3" %>
                <%= label_tag 'early_access', "I would like early access to Hermit Plus", class: "text-hermit-burnt font-mPlusCode text-sm lg:text-base" %>
              </div>
            </div>

            <div>
              <%= form.label :description, "Message", class: "block text-hermit-burnt font-mPlusCode mb-2 text-sm lg:text-base font-semibold" %>
              <%= form.text_area :description, rows: 6, class: "w-full p-3 border border-hermit-burnt rounded-md bg-white text-hermit-burnt placeholder-hermit-burnt/50 font-mPlusCode focus:outline-none focus:ring-2 focus:ring-hermit-teal resize-none" %>
            </div>

            <div class="flex justify-end">
              <%= form.submit "Submit", data: { hermit_contact_target: "submit" }, class: "bg-hermit-teal text-white font-bold py-3 px-10 rounded-md uppercase tracking-wider font-mPlusCode hover:bg-hermit-teal/90 transition-colors shadow-md cursor-pointer" %>
            </div>
          <% end %>
        </div>

        <!-- Minecraft Ground Pattern - Grey -->
        <%= image_tag 'https://milk-blog.s3.us-east-2.amazonaws.com/hermits/ground_grey.svg', class: "w-full h-auto block mt-auto" %>
      </div>

    </div>
  </div>

</section>
