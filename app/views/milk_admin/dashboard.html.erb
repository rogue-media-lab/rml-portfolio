<div class="flex h-screen bg-gray-50">
  <!-- Sidebar Navigation -->
  <aside class="w-64 bg-gray-900 text-white flex flex-col">
    <!-- Logo/Brand -->
    <div class="p-6 border-b border-gray-700">
      <h1 class="text-2xl font-bold">RML Dashboard</h1>
    </div>

    <!-- Navigation Menu -->
    <nav class="flex-1 p-4 space-y-2">
      <%= link_to milk_admin_root_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg bg-sky-700 hover:bg-sky-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="font-medium">Dashboard</span>
      <% end %>

      <%= link_to milk_admin_blogs_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <span class="font-medium">Blogs</span>
      <% end %>

      <%= link_to milk_admin_songs_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
        </svg>
        <span class="font-medium">Songs</span>
      <% end %>

      <%= link_to milk_admin_playlists_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2zM17 6v8.18c-.31-.11-.65-.18-1-.18-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3V8h3V6h-5z"/>
        </svg>
        <span class="font-medium">Playlists</span>
      <% end %>

      <%= link_to milk_admin_hermits_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="font-medium">Hermits</span>
      <% end %>

      <%= link_to milk_admin_hermit_videos_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-medium">Hermit Videos</span>
      <% end %>

      <%= link_to milk_admin_projects_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
        </svg>
        <span class="font-medium">Projects</span>
      <% end %>

      <%= link_to milk_admin_pills_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
        <span class="font-medium">Skills</span>
      <% end %>

      <%= link_to milk_admin_messages_dashboard_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="font-medium">Messages</span>
        <% if @unread_contacts > 0 %>
          <span class="ml-auto bg-red-500 text-white text-xs px-2 py-1 rounded-full"><%= @unread_contacts %></span>
        <% end %>
      <% end %>
    </nav>

    <!-- Settings at bottom -->
    <div class="p-4 border-t border-gray-700">
      <%= link_to milk_admin_profile_path, data: { turbo_frame: "dashboard_content" }, class: "flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-medium">Settings</span>
      <% end %>
    </div>
  </aside>

  <!-- Main Content Area -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Top Header -->
    <header class="bg-white border-b border-gray-200 p-4">
      <div class="flex items-center justify-between">
        <!-- Search Bar -->
        <div class="flex-1 max-w-md">
          <div class="relative">
            <input type="text" placeholder="Search..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- User Info & Actions -->
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <% if @milk_admin.profile&.avatar&.attached? %>
              <%= image_tag @milk_admin.profile.avatar, class: "w-8 h-8 rounded-full object-cover" %>
            <% else %>
              <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 4a4 4 0 1 0 0 8 4 4 0 0 0 0-8Zm-2 9a4 4 0 0 0-4 4v1a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2v-1a4 4 0 0 0-4-4h-4Z" clip-rule="evenodd"/>
                </svg>
              </div>
            <% end %>
            <span class="text-sm text-gray-600">Logged in as: <span class="font-medium"><%= @milk_admin.full_name %></span></span>
          </div>
          <%= link_to "View Profile", milk_admin_profile_path, class: "px-4 py-2 bg-sky-700 hover:bg-sky-600 text-white rounded-lg transition-colors" %>
          <%= button_to "Log Out", destroy_milk_admin_session_path, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors" %>
        </div>
      </div>
    </header>

    <!-- Dashboard Content -->
    <main class="flex-1 overflow-y-auto p-6">
      <%= turbo_frame_tag "dashboard_content" do %>
        <%= render "dashboard_overview" %>
      <% end %>
    </main>
  </div>
</div>
